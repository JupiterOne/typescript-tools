{
  "name": "@jupiterone/typescript-tools",
  "version": "20.0.0",
  "description": "Shared TypeScript tooling configuration for JupiterOne projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/JupiterOne/typescript-tools"
  },
  "license": "UNLICENSED",
  "main": "./index.js",
  "author": "Development <development@jupiterone.com>",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format-code": "prettier --write '**/*.{js,ts,md,json}'",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,md,json,yaml}'",
    "compile": "tspc --declaration -p tsconfig.json",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run compile",
    "yalc:publish": "npm run build && node ./dist/bin/yalc-publish",
    "yalc:check": "node ./dist/bin/yalc-check",
    "tsconfig:repair": "node ./dist/bin/check-tsconfig --repair",
    "tsconfig:check": "node ./dist/bin/check-tsconfig --no-repair",
    "prepare": "husky"
  },
  "bin": {
    "check-tsconfig": "./dist/bin/check-tsconfig.js",
    "yalc-publish": "./dist/bin/yalc-publish.js",
    "yalc-check": "./dist/bin/yalc-check.js"
  },
  "dependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@jupiterone/eslint-config": "^3.0.0",
    "@philidem/rewrite-relative-paths": "^1.2.3",
    "babel-jest": "^30.2.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-patch": "^3.3.0",
    "ts-transform-paths": "^3.0.0",
    "typescript": "^5.8.3",
    "typescript-transform-paths": "^3.5.4",
    "yalc": "^1.0.0-pre.53",
    "yargs": "^18.0.0"
  },
  "files": [
    "LICENSE",
    "*.md",
    "index.js",
    "config/**/*",
    "dist/**/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint-plugin-jest": "^29.12.1"
  }
}
